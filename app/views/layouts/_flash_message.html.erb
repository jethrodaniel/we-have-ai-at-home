<%= tag.div role: :alert,
  data: {
    controller: "auto-remove",
    auto_remove_delay_value: 5000
  },
  class: "alert #{alert_class(type)} alert-dismissible fade show" do %>
  <%= image_tag alert_image(type), class: "float-start mt-1 mx-2" %>
  <%= message  %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
<% end %>
